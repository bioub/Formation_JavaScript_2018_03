{
  "dependencies": {
    "chalk": "^2.3.2"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "husky": "^0.15.0-rc.8",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1"
  },
  "scripts": {
    "prettier": "prettier '**/*.{js,json}' --write ",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "test": "node launch-tests.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "npm install",
      "post-pull": "npm install"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
